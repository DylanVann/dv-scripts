{
  "name": "dv-scripts-workspace",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wsrun --stages build",
    "lint": "wsrun lint",
    "release": "node --require dotenv/config packages/dv-scripts/bin.js release",
    "start": "wsrun start",
    "test": "cross-env CI=true wsrun test"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6",
    "wsrun": "^5.2.1"
  }
}
